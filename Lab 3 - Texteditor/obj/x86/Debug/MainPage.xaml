<Page
    x:Class="Lab_3___Texteditor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lab_3___Texteditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.TopAppBar >
        <AppBar IsOpen="True" IsSticky="True">
            <StackPanel Orientation="Horizontal">
                <AppBarButton x:ConnectionId='2' Width="auto" Margin="10" x:Name="New_btn" Label="New File" Icon="Page"                      />
                <AppBarButton x:ConnectionId='3' Width="auto" Margin="10" x:Name="QuickSaveBtn" Label="Save..." Icon="SaveLocal"                           />
                <AppBarButton x:ConnectionId='4' Width="auto" Margin="10" x:Name="Open_btn" Label="Open File" Icon="OpenFile"                       />
                <AppBarButton x:ConnectionId='5' Width="auto" Margin="10" x:Name="SaveAs_btn" Label="Save as..." Icon="MoveToFolder"                         />
            </StackPanel>
        </AppBar>
    </Page.TopAppBar>
    <Grid Margin="10" Padding="0,50,0,0">
        <TextBox x:ConnectionId='6' TextWrapping="Wrap"                                          AcceptsReturn="True" Name="ResultatText" Width="auto" Height="auto"></TextBox>
    </Grid>
</Page>

